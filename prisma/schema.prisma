generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          String  @id @default(cuid())
  author      User    @relation(fields: [authorId], references: [id])
  authorId      String 
  title     String @default("")
  content   String  @default("")
}

model User {
  id          String  @id @default(cuid())
  email       String  @unique
  firstName   String?
  lastName    String?
  posts       Post[]
}



